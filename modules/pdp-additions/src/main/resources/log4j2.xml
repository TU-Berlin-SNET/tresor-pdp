<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="INFO">
        <Appenders>
            <Console name="stdout" target="SYSTEM_OUT">
                <PatternLayout charset="UTF-8" alwaysWriteExceptions="false">
                    <pattern>{"priority":"%p","timestamp":"%d{UNIX_MILLIS}", "logger":"%c","message":"%enc{%m} %enc{%rEx{short}}","tresor-component":"%X{tresor-component}","category":"%X{category}","client-id":"%X{client-id}","subject-id":"%X{subject-id}"}%n</pattern>
                </PatternLayout>
            </Console>
            <Socket name="socket" host="xacml.snet.tu-berlin.de" port="9400">
                <PatternLayout charset="UTF-8" alwaysWriteExceptions="false">
                    <pattern>{"priority":"%p","timestamp":"%d{UNIX_MILLIS}", "logger":"%c","message":"%enc{%m} %enc{%rEx{short}}","tresor-component":"%X{tresor-component}","category":"%X{category}","client-id":"%X{client-id}","subject-id":"%X{subject-id}"}%n</pattern>
                </PatternLayout>
            </Socket>
            <Async name="async">
                <AppenderRef ref="socket" />
                <AppenderRef ref="stdout" />
            </Async>
        </Appenders>
        <Loggers>
            <Root level="INFO">
                <AppenderRef ref="async" />
            </Root>
        </Loggers>
    </Configuration>