<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
   http://maven.apache.org/xsd/assembly-1.1.2.xsd">
 <!--id>dist</id-->
 <formats>
  <format>zip</format>
 </formats>
 <files>
  <file>
   <source>../balana-core/target/${project.groupId}-${project.version}.jar</source>
   <outputDirectory>/</outputDirectory>
  </file>
  <file>
   <source>../../README.txt</source>
   <outputDirectory>/</outputDirectory>
  </file>
  <file>
   <source>../../NOTICE.txt</source>
   <outputDirectory>/</outputDirectory>
  </file>
 </files>
 <fileSets>
  <fileSet>
   <directory>../balana-samples/kmarket-trading-sample/</directory>
   <outputDirectory>/samples/trading/</outputDirectory>
      <excludes>
        <exclude>**/src/</exclude>
        <exclude>**/.svn/</exclude>
        <exclude>pom.xml</exclude>
        <exclude>**/target/</exclude>
      </excludes>
  </fileSet>
  <fileSet>
   <directory>../balana-samples/kmarket-trading-sample/target</directory>
   <outputDirectory>/samples/trading/lib</outputDirectory>
      <includes>
	<include>**/*.jar</include>
      </includes>
  </fileSet>
  <fileSet>
   <directory>../balana-core/target</directory>
   <outputDirectory>/samples/trading/lib</outputDirectory>
      <includes>
	<include>**/*.jar</include>
      </includes>
  </fileSet>
  <fileSet>
   <directory>../balana-samples/web-page-image-filtering/</directory>
   <outputDirectory>/samples/filtering/</outputDirectory>
      <excludes>
        <exclude>**/src/</exclude>
        <exclude>**/.svn/</exclude>
        <exclude>pom.xml</exclude>
        <exclude>**/target/</exclude>
      </excludes>
  </fileSet>
  <fileSet>
   <directory>../balana-samples/web-page-image-filtering/target</directory>
   <outputDirectory>/samples/filtering/lib</outputDirectory>
      <includes>
	<include>**/*.jar</include>
      </includes>
  </fileSet>
  <fileSet>
   <directory>../balana-core/target</directory>
   <outputDirectory>/samples/filtering/lib</outputDirectory>
      <includes>
	<include>**/*.jar</include>
      </includes>
  </fileSet>
  <fileSet>
   <directory>../balana-documentation/target</directory>
   <outputDirectory>/docs</outputDirectory>
      <includes>
	<include>**/*.jar</include>
      </includes>
  </fileSet>
 </fileSets>
</assembly>
