<Policy xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17"
        xmlns:xacml="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyId="Policy-Demo-users"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable"
        Version="1.0">
    <Description>
    </Description>
    <Target>
        <AnyOf>
            <AllOf>
                <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-regexp-match">
                    <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">http:\/\/xacml.snet.tu-berlin.de:3000\/users\/</AttributeValue>
                    <AttributeDesignator MustBePresent="false"
                                         Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
                                         AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id"
                                         DataType="http://www.w3.org/2001/XMLSchema#string"/>
                </Match>
            </AllOf>
        </AnyOf>
    </Target>
    
    <Rule RuleId="rule1" Effect="Permit">
        <Description>Any action  GET|POST|PUT|DELETE on "/users" performed by "admin" is Permited</Description>
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-regexp-match">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">http:\/\/xacml.snet.tu-berlin.de:3000\/users\?locale=(en|de|es)$</AttributeValue>
                        <AttributeDesignator MustBePresent="false"
                                             Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
                                             AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Match>
                </AllOf>
            </AnyOf>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-regexp-match">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">(GET|POST|PUT|DELETE)</AttributeValue>
                        <AttributeDesignator MustBePresent="false"
                                             Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                             AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:any-of">
                <Function FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-equal"/>
                <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">admin</AttributeValue>
                <AttributeDesignator
                        Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                        AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id"
                        DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="false"/>
            </Apply>
        </Condition>
    </Rule>
    
    <Rule RuleId="rule2" Effect="Permit">
        <Description>The GET|POST|PUT|DELETE action on "/users/1 or /users/2" can be done only by the "admin" user.</Description>
        <Target>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-regexp-match">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">http:\/\/xacml.snet.tu-berlin.de:3000\/users\/\d{1,4}\?locale=(en|de|es)$</AttributeValue>
                        <AttributeDesignator MustBePresent="false"
                                             Category="urn:oasis:names:tc:xacml:3.0:attribute-category:resource"
                                             AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Match>
                </AllOf>
            </AnyOf>
            <AnyOf>
                <AllOf>
                    <Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-regexp-match">
                        <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">(GET|POST|PUT|DELETE)</AttributeValue>
                        <AttributeDesignator MustBePresent="false"
                                             Category="urn:oasis:names:tc:xacml:3.0:attribute-category:action"
                                             AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"
                                             DataType="http://www.w3.org/2001/XMLSchema#string"/>
                    </Match>
                </AllOf>
            </AnyOf>
        </Target>
        <Condition>
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:any-of">
                <Function FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-equal"/>
                <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">admin</AttributeValue>
                <AttributeDesignator
                        Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject"
                        AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id"
                        DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="false"/>
            </Apply>
        </Condition>
    </Rule>
    
    <Rule RuleId="rule3" Effect="Deny">
        <Description>All other requests are denied</Description>     
    </Rule>
</Policy>
